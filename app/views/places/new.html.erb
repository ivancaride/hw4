<h1>New Place</h1>

<%= form_with :model => @place do |form| %>
  <p>
    <%= form.label "name" %>
    <%= form.text_field "name" %>
  </p>
  <p>
    <%= form.submit "Add", :class => "btn btn-dark" %>
  </p>
  <div>
    <p>
    <a href="/places/" class="btn btn-success">Back to all places</a>
    </p>
  </div>  
<% end %>
