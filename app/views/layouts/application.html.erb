<!DOCTYPE html>
<html>
  <head>
    <title>HW 4</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- My own CSS -->
<link rel="stylesheet" href="/stylesheets/application.css">
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </head>





  <body>
    <div>
      <nav class="navbar bg-primary border-bottom border-bottom-primary mb-3" data-bs-theme="primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <ul class="navbar-nav mb-2 mb-lg-0">
              <% if @current_user %>
                <li class="nav-item">Logged in as: <%= @current_user["first_name"] %></li>
                <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
              <% else %>
                <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
                <li class="nav-item"><a href="/users/new" class="nav-link">Sign Up</a></li>
              <% end %>
        </div>
      </nav>
    </div>

    <div class="container">
      <div>
      <% if flash["notice"] %>
        <div class="alert alert-success mt-3">
        <%= flash["notice"] %>
        </div>
      <% end %>
      <div class="row">
      <div class="col-sm-9">
        <h1>Your travel Journal!</h1>
      </div>

      <%= yield %>
    </div>
  </body>
</html>

