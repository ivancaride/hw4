<!DOCTYPE html>
<html>
  <head>
    <title>HW 4</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- My own CSS -->
<link rel="stylesheet" href="/stylesheets/application.css">
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

<body>
  <div>
    <nav class="navbar bg-primary border-bottom border-bottom-primary mb-3" data-bs-theme="primary">
      <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">Home</a>
        <span class="navbar-text">
          <% if @current_user %>
          Logged in as: <%= @current_user["username"] %> | <a href="/logout" class="text-white">Logout</a>
          <% else %>
          <a href="/users/new" class="text-white">Sign Up</a> | <a href="/login" class="text-white">Login</a>
          <% end %>
        </span>
      </div>
    </nav>

    <div class="container">
      <div>
        <% if flash["notice"] %>
        <div class="alert alert-info mt-3">
          <%= flash["notice"] %>
        </div>
        <% end %>
        <div class="row">
          <div class="col-sm-9">
            <h1 class="text-primary">Your Travel Journal!</h1>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
</body>
